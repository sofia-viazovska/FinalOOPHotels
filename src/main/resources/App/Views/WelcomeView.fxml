<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="App.Controllers.WelcomeController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Text text="Welcome to Hotel Booking System" styleClass="welcome-title"/>
    <Text text="Your one-stop solution for hotel reservations" styleClass="welcome-subtitle"/>

    <VBox alignment="CENTER" spacing="10" styleClass="feature-list">
        <Text text="Features:"/>
        <Text text="• Search and filter hotels by location, price, and rating"/>
        <Text text="• View detailed information about hotels"/>
        <Text text="• Browse and search for hotels"/>
        <Text text="• View room details and availability"/>
        <Text text="• Make and manage bookings"/>
    </VBox>

    <HBox alignment="CENTER" spacing="20">
        <Button text="See and choose your stay!" styleClass="btn-primary" onAction="#showHotelsView"/>
        <Button text="Login" styleClass="btn-secondary" onAction="#showLoginView"/>
        <Button text="Register" styleClass="btn-info" onAction="#showRegisterView"/>
    </HBox>

</VBox>
